@using IssueTracker.Models,
@using IssueTracker.Helpers,
@model ApplicationUser
@{
    ViewBag.Title = "ManageUserRoles";
    var rolesHelper = new RolesHelper();
}


<div class="container">
    <div class="page-inner">
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">Manage User Role for:</h5>
                <br />

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @*@Html.DisplayFor(model => user.FullName)*@
                    </div>
                    <br />
                    <div class="form-group">
                        @Html.DropDownList("RoleName", "-- NO ROLE --")
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-success btnWide">Save Changes</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>