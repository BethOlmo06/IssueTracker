@using Microsoft.AspNet.Identity;
@model IEnumerable<IssueTracker.Models.Project>

@{
    ViewBag.Title = "Index";
    var projectHelper = new IssueTracker.Helpers.ProjectHelper();
}


<h2>Projects</h2>
@if (User.IsInRole("Admin") || (User.IsInRole("Project Manager"))) {
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Created)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsArchived)
                </th>
                <th></th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsArchived)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    </tbody>
        }
    </table>
}


    <h3>My Projects</h3>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>
                    Project Name
                </th>
                <th>
                    Created On
                </th>
                <th>
                    Is Archived?
                </th>
                <th></th>
            </tr>
        </thead>

        @foreach (var item in projectHelper.ListUserProjects(User.Identity.GetUserId()))
        {
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Created)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsArchived)
                    </td>
                </tr>
            </tbody>
        }
    </table>

