@model IEnumerable<IssueTracker.Models.ApplicationUser>
@{
    ViewBag.Title = "ManageProjectUsers";
    var projectHelper = new IssueTracker.Helpers.ProjectHelper
}

<h2>Manage Project Users</h2>

<style>
    .btnWide {
        width: 100%;
    }
</style>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-6">
            <h2>Select Users</h2>
            @Html.ListBox("UserIds")
        </div>
        <div class="col-6">
            <h2>Select Project</h2>
            @Html.ListBox("ProjectIds")
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <button type="submit" class="btn btn-success btnWide">Assign Users</button>
        </div>
    </div>

}

<hr />


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Created)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsArchived)
        </th>
        <th></th>
    </tr>

    @foreach (var user in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => user.Email)
            </td>
            <td>
                @foreach (var project in projectHelper.ListUserProjects(userId))
                {
                    @project.Name <br />
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>



