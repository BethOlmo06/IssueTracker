@using Microsoft.AspNet.Identity;
@using IssueTracker.Helpers;
@model IssueTracker.Models.Ticket

@{
    ViewBag.Title = "Dashboard";
    var ticketManager = new TicketManager();
}
<body>
    <div class="container">
        <div class="page-inner">
            <div class="col-md-4">
                <div class="card card-dark bg-primary-gradient">
                    <div class="card-body pb-lg-0">
                        <div class="h1 fw-bold float-right"></div>
                        <h1 class="align-middle mb-5">Ticket Dashboard</h1>
                    </div>
                </div>
            </div>
            <div class="card mb-xl-5" style="width: 54rem;">
                <div class="card-body">
                    <div class="row">
                        <div class="col-2"><h2>Project:</h2></div>
                        <div class="col-8"><h3>@Model.Project.Name</h3></div>
                    </div>
                    <div class="row">
                        <div class="col-2"><h3>Issue:</h3></div>
                        <div class="col-8"><h4>@Model.Issue</h4></div>
                    </div>
                    <div class="row">
                        <div class="col-2"><h3>Type:</h3></div>
                        <div class="col-8"><h4>@Model.TicketType.Name</h4></div>
                    </div>
                    <div class="row">
                        <div class="col-2"><h3>Priority:</h3></div>
                        <div class="col-8"><h4>@Model.TicketPriority.Name</h4></div>
                    </div>
                    <div class="row">
                        <div class="col-2"><h3>Status:</h3></div>
                        <div class="col-8"><h4>@Model.TicketStatus.Name</h4></div>
                    </div>
                    <div class="row">
                        <div class="col-2"><h3>Created:</h3></div>
                        <div class="col-8"><h4>@Model.Project.Created</h4></div>
                    </div>
                    @if (Model.DeveloperId != null)
                    {
                        <div class="row">
                            <div class="col-2"><h3>Assigned To:</h3></div>
                            <div class="col-8"><h4>@Model.Developer.FullName</h4></div>
                        </div>
                    }
                    <div class="row">
                        <div class="col-2"><h3>Description:</h3></div>
                        <div class="col-10"><h4>@Model.IssueDescription</h4></div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="card mb-xl-5">
                        <div class="card-body">
                            <h2>Comments</h2>
                            @if (Model.Comments.Count != 0)
                            {
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>
                                                First Name
                                            </th>
                                            <th>
                                                Comment
                                            </th>
                                            <th>
                                                Posted On
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>

                                    @foreach (var item in Model.Comments)
                                    {
                                        <tbody>
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.User.FullName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Comment)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Created)
                                                </td>
                                                <td>
                                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                                </td>
                                            </tr>
                                        </tbody>
                                    }
                                </table>
                            }
                            else
                            {
                                <h5 class="mt-3">No comments have been made yet.</h5>
                            }
                            <div class="row mt-xl-5">
                                <div class="col">
                                    @if (ticketManager.CanMakeComment(Model.Id))
                                    {
                                        <h3>Add Comment</h3>
                                        using (Html.BeginForm("Create", "TicketComments", FormMethod.Post))
                                        {
                                            @Html.AntiForgeryToken()
                                            <div class="form-horizontal">

                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                @Html.Hidden("TicketId", Model.Id)
                                                <div class="form-group">
                                                    @Html.Label("Comment", htmlAttributes: new { @class = "control-label col-md-2" })
                                                    <div class="col-md-12">
                                                        @Html.TextArea("Comment", htmlAttributes: new { @class = "form-control" })
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-md-offset-2 col-md-10">
                                                        <input type="submit" value="Submit" class="btn btn-success" />
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col">
                    <div class="card mb-xl-5">
                        <div class="card-body">
                            <h2>Attachments</h2>

                            @if (ticketManager.CanEditTicket(Model.Id))
                            {
                                <h4>Add Attachment</h4>
                                using (Html.BeginForm("Create", "TicketAttachments", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.Hidden("TicketId", Model.Id)

                                    <div class="form-group">
                                        @Html.Label("File Name", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.Editor("FileName", new { htmlAttributes = new { @class = "form-control" } })

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Description", htmlAttributes: new { @class = "control-label col-md-2" })

                                        @Html.TextArea("Description", htmlAttributes: new { @class = "textarea form-control" })
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Attachment", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            <input type="file" name="file" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <input type="submit" value="Add Attachment" class="btn btn-primary" />
                                        </div>
                                    </div>
                                }
                            }
                            @if (Model.Attachments.Count != 0)
                            {
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayName("Icon")
                                            </th>
                                            <th>
                                                @Html.DisplayName("File Name")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Path")
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var attachment in Model.Attachments.ToList())
                                        {

                                            <tr>
                                                <td>
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => attachment.FileName)
                                                </td>
                                                <td>
                                                    <a target="_blank" href="@attachment.FilePath">@attachment.FilePath</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                        </div>
                    </div>
                </div>

                <div class="col">
                    <div class="card mb-xl-5">
                        <div class="card-body">
                            <h2>History</h2>
                            @if (Model.Histories.Count > 0)
                            {
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>
                                                Edited By
                                            </th>
                                            <th>
                                                Property
                                            </th>
                                            <th>
                                                Old Value
                                            </th>
                                            <th>
                                                New Value
                                            </th>
                                            <th>
                                                Changed On
                                            </th>
                                        </tr>
                                    </thead>
                                    @foreach (var item in Model.Histories)
                                    {
                                        <tbody>
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.User.FirstName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Property)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.OldValue)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.NewValue)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ChangedOn)
                                                </td>
                                            </tr>
                                        </tbody>
                                    }

                                </table>
                            }
                            else
                            {
                                <h5>No changes have been made yet.</h5>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @section scripts {
        <script>
            // format ALL tables by class selector
            $('.table').DataTable();
        </script>

    }
</body>
<footer class="footer">

    <div class="container-fluid">
        <img src="~/Images/TrackIT1.1Light100x40.png" />
        <div class="copyright ml-auto">
            <p>&copy; @DateTime.Now.Year - <a href="//betholmo-portfolio.netlify.app/" target="_blank">Beth Olmo</a></p>
        </div>
    </div>
</footer>